<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/your_character"
        android:id="@+id/yourCharacter"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="100px" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="250px"
        android:text="@string/attributes"
        android:id="@+id/attributes"
        android:layout_below="@+id/yourCharacter"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="50px"
        android:background="@drawable/border" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@+id/attributes"
        android:background="@drawable/border"
        android:id="@+id/raceInformation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/race"
            android:id="@+id/raceHeader"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="New Text"
            android:id="@+id/myRace"
            android:textSize="50px"
            android:scrollbars = "vertical"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:layout_below="@+id/raceInformation"
        android:background="@drawable/border"
        android:id="@+id/classInformation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/myClass"
            android:id="@+id/classHeader"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/myClass"
            android:textSize="50px"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical"
            android:text="New Text" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="400px"
        android:background="@drawable/border"
        android:layout_below="@+id/classInformation"
        android:id="@+id/backgroundInformation">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/background"
            android:id="@+id/backHeader"
            android:textSize="50px" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/background"
            android:id="@+id/myBackground"
            android:textSize="50px"
            android:layout_below="@+id/backHeader"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:scrollbars="vertical"/>

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <!-- <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/go_play"
        android:id="@+id/goPlay"
        android:layout_centerHorizontal="true"
        android:layout_alignBottom="@+id/progressBar" /> -->

</RelativeLayout>